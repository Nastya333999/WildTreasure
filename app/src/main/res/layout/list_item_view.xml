<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="80dp">


    <ImageView
        android:id="@+id/imViewFirst"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/im_q"
        app:layout_constraintEnd_toStartOf="@+id/imViewSecond"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imViewSecond"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/im_w"
        app:layout_constraintEnd_toStartOf="@+id/imViewTherd"
        app:layout_constraintStart_toEndOf="@id/imViewFirst"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imViewTherd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/img_e"
        app:layout_constraintEnd_toStartOf="@+id/imViewFour"
        app:layout_constraintStart_toEndOf="@id/imViewSecond"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imViewFour"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/img_r"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imViewTherd"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>